<Application x:Class="Dalmatian.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Dalmatian"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <!-- Order is important -->
            <ResourceDictionary Source="Styles/BaseStyle.xaml "/>
            <ResourceDictionary Source="Templates/CheckBoxTemplate.xaml "/>
            <ResourceDictionary Source="Templates/TabControlTemplate.xaml "/>
            <ResourceDictionary Source="Templates/ButtonTemplate.xaml "/>
            <ResourceDictionary Source="Templates/CheckBoxTemplate.xaml "/>
         </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
   </Application.Resources>
</Application>
