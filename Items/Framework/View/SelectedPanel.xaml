<UserControl x:Class="GUI.Items.Framework.SelectedPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Items.Framework"
             mc:Ignorable="d">
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition/>
         <ColumnDefinition/>
         <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0" Text="Selected Instruction File :" Style="{StaticResource TextBlockStyle}"
            HorizontalAlignment="Left" Margin="15,0,0,0"/>
      <TextBlock Grid.Column="1" x:Name="SelectedMorph" Text="{Binding SelectedXmlFile}" Style="{StaticResource TextBlockStyle}"
            HorizontalAlignment="Center"/>
      <Button  Grid.Column="2" Content="Open Instruction file" Style="{StaticResource BaseStyle}"
            Command = "{Binding OpenCommand}"
            HorizontalAlignment="Right" Margin="0,0,7,0"
            Template="{StaticResource NewButtonControlTemplate}"/>
   </Grid>
</UserControl>
